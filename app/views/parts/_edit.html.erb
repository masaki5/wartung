<h1>パーツ内容編集</h1>

<%= form_for [@car, @part] do |f| %>
<%= f.label "部品名" %>
<%= f.text_field :name, class: 'form-control' %><br>
<%= f.label "商品説明" %>
<%= f.text_area :introduction , class: 'form-control'%><br>
<%= f.submit "パーツ内容修正", class: 'form-control' %>
<% end %>
<br>
<button type="button" class="btn btn-primary btn-md">
    <%= link_to '車詳細', car_path(@car), :style=>"color:white;" %></button>
<button type="button" class="btn btn-primary btn-md">
    <%= link_to '戻る', car_part_path(@car), :style=>"color:white;" %></button>
</div>
<div class="col-sm-6">
    <p id="notice"><%= notice %></p>
    <% if @part.errors.any? %>
    <div id="error_explanation">
        <h5><%= @part.errors.count %>件のerrorが発生しました。</h5>
        <ul>
            <% @part.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
</div>