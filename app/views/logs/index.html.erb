<div class="row">
  <div class="col-sm-8">
    <h1>履歴</h1>

    <table class="table table-hover table-inverse table-bordered">
      <thead class="thead-light">
        <tr>
          <th>交換日</th>
          <th>パーツ名</th>
          <th>削除</th>
        </tr>
      </thead>

      <tbody>
        <% @log.each do |log| %>
        <tr>
          <% if log.exchange %>
          <td><%= link_to log.exchange, car_log_path(@car, log) %></td>
          <% else %>
          <td><%= link_to "履歴詳細", car_log_path(@car, log) %></td>
          <% end %>

          <td><%= log.part.name %></td>
          <td><%= link_to '削除', car_log_path(@car, log), method: :delete, data: { confirm: "本当に削除しますか?" } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @log %>
    <button type="button" class="btn btn-primary btn-md">
      <%= link_to "車詳細", car_path(@car), :style=>"color:white;" %></button>
    <button type="button" class="btn btn-primary btn-md">
      <%= link_to '戻る', :back, :style=>"color:white;" %></button>
  </div>
</div>