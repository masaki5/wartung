<!DOCTYPE html>
<html>

  <head>
    <title>Wartung</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <div class = "box2">
      <% if admin_signed_in? %>
      <nav class="nav navbar-nav navbar-left" style="color: #fff">
        <h3><%= link_to "wartung", admin_users_path, :style=>"color:blue;" %></h3>
      </nav>
      <% elsif user_signed_in? %>
      <nav class="nav navbar-nav navbar-left" style="color: #fff">
        <h3><%= link_to "wartung", root_path, :style=>"color:blue;" %></h3>
      </nav>
      <% else %>
      <nav class="nav navbar-nav navbar-left" style="color: #fff">
        <h3><%= link_to "wartung", root_path, :style=>"color:blue;" %></h3>
      </nav>
      <% end %>
      </div>
    </header>


    <div class = "box1">
      <div class="row">
        <div class="col-2">
          <div class = "box3">
            <%= render'layouts/sidebar' %>
          </div>
        </div>
        <div class="col-10">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
