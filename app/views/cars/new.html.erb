<div class=row">
	<div class="col-sm-12">
		<h1>新規車両登録</h1>

		<%= form_for(@car) do |f| %>
		<div>
			<%= "車両名" %>
			<%= f.text_field :name %>
		</div>

		<div>
			<%= "走行距離" %>
			<%= f.text_field :mileage %><p>km</p>
		</div>

		<div>
			<%= "点検日" %>
			<%= f.date_field :inspection %>
		</div>
		<div>
			<%= "車検日" %>
			<%= f.date_field :car_inspection %>
		</div>

		<div>
			<%= "車両登録日" %>
			<%= f.date_field :register %>
		</div>

		<div>
			<%= f.submit "車両登録" %>
		</div>
		<% end %>

		<button type="button" class="btn btn-primary btn-md">
			<%= link_to '戻る', :back, :style=>"color:white;" %></button>
	</div>
</div>