<table class="table table-hover table-inverse table-bordered">
    <thead class="thead-light">
        <tr>
            <th>車両名</th>
            <th>編集</th>
            <th>削除</th>
        </tr>
    </thead>
    <tbody>
        <% cars.each do |car| %>
        <tr>
            <td>
                <%= link_to car.name, car_path(car.id) %>
            </td>
            <td>
                <%= link_to '車両編集', edit_car_path(car.id) %>
            </td>
            <td>
                <%= link_to '車削除', car_path(car.id, page: params[:page]), method: :delete, data: { confirm: '本当に削除しますか?' }, remote: true %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<%= paginate cars %>