<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>登録車両一覧</h1>

  <table>
    <thead>
      <tr>
        <!--<th>車両名</th>-->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cars.each do |car| %>
      <tr>
        <td><%= link_to car.name, car_path(car.id) %></td>
        <td><%= link_to 'Edit', edit_car_path(car.id) %></td>
        <td><%= link_to 'Destroy', car_path(car.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '新規登録', new_car_path %>
</div>