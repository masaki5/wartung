<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <div class="col-sm-8">
      <h1>登録車両一覧</h1>

      <table class="table table-hover table-inverse table-bordered">
        <thead class="thead-light">
          <tr>
            <th>車両名</th>
            <th>編集</th>
            <th>削除</th>
          </tr>
        </thead>

        <tbody>
          <% @cars.each do |car| %>
          <tr>
            <td><%= link_to car.name, car_path(car.id) %></td>
            <td><%= link_to '車両編集', edit_car_path(car.id) %></td>
            <td><%= link_to '車削除', car_path(car.id), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <button type="button" class="btn btn-primary btn-md">
        <%= link_to '新規登録', new_car_path, :style=>"color:white;" %></button>
    </div>
  </div>
</div>