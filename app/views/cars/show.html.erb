<div class="row">

  <p id="notice"><%= notice %></p>

  <div class="col-sm-4">
  <h3><ul>
    <strong>会員名</strong>
    <%= @car.user.name %>
    <h3>車両情報</h3>
    <li><strong>車両名</strong>
    <%= @car.name %></li>
    <li><strong>走行距離</strong>
    <%= number_to_currency(@car.mileage) %></li>

    <%= form_for(@car) do |f| %>
      <div>
      <strong>走行距離</strong>
        <%= f.text_field :mileage, :size=> "6" %>km
      </div>

      <div class="actions row">
        <%= f.submit "走行距離変更" %>
      </div>
    <% end %>
    <li><strong>車両経年数</strong>
    <%= @age %>年</li>
    <li><strong>点検日</strong>
    <%= @car.inspection %></li>
    <li><strong>車検日</strong>
    <%= @car.car_inspection %></li>
    <li><strong>車両登録日</strong>
    <%= @car.register %></li>
  </h3></ul>
  <div>
    <p>1年点検まで残り<%= @v1 %>日</p></div>
  <div><br>
    <p>2年点検まで残り<%= @v2 %>日</p></div>
    </div>

  <div class="col-sm-6">
    <table>
      <thead>
        <tr>
          <th>パーツ名</th>
          <th></th>
          <th>最終交換日</th>
          <th></th>
          <th>交換推奨日 残り日数</th>
          <th></th>
          <th>残りkm</th>
        </tr>
      </thead>
      <tbody>
        <% @parts.each do |part| %>
        <tr>
        <td>
        <%= link_to part.name, car_part_path(:car_id => @car.id, :id => part.id) %>
        </td>
        <td><%= link_to "削除", car_part_path(:car_id => @car.id, :id => part.id), method: :delete%></td>
        <!--:car_id => @car.id, :id => part.idルートの番号（順番指定）-->
        <% log = part.logs.last %>
        <!-- 両方あったら、表示なかったら非表示 -->
        <td><%if log && log.exchange%>
          <%= log.exchange %>
        <% end %><td>

        <td><%if log && log.next%>
          <%= log.next %>
          <% c = log.next %>
          <% now = Date.current %>
          残り<%= (c - now).to_i %>日
        <% end %><td>

        <td><%if log && log.distance && log.after%>
          <% log.distance %>
          <% m = log.after %>
          <% z = log.distance %>
          <% q = @car.mileage %>
          <% w = (q - z) %>
          残り<%= g = (m - w) %>km
        <% end %><td>

        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @parts %>
  </div>

  <div class="col-sm-2">
  <%= render partial: 'parts/new', locals: { car: @car, part: @part} %>
  <br>
  <%= link_to "履歴確認", car_logs_path(@car) %>
  <br>
  <%= link_to '車両情報編集', edit_car_path(@car) %> |
  <%= link_to '戻る', cars_path %>
  </div>
</div>
